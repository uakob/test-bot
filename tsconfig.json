{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "app",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictFunctionTypes": false,
    "allowJs": false,
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    ".vscode"
  ]
}
